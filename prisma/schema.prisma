generator client {
  provider = "prisma-client-js"
  engineType = "library"
  binaryTargets = ["native"]
}

datasource db {
  provider  = "postgresql"
}

model Drop {
  id          String   @id @default(uuid())
  day         Int
  date        DateTime @default(now())
  topic       String
  description String
  stack       String[]
  commitMsg   String?
  createdAt   DateTime @default(now())

  @@map("drops")
}
